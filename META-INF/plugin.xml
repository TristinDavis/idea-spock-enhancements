<idea-plugin version="2">
    <name>Spock Enhancements</name>
    <description>
        Adds syntax highlighting to Spock labels.
    </description>
    <version>0.1-alpha3</version>
    <vendor>Matt Cholick</vendor>

    <depends>org.intellij.groovy</depends>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="111.69"/>

    <application-components>

    </application-components>

    <project-components>
    </project-components>

    <actions>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <highlightVisitor implementation="com.cholick.idea.spock.highlight.SpockHighlightVisitor"/>
        <applicationConfigurable instance="com.cholick.idea.spock.config.SpockConfigForm"/>
        <applicationService serviceInterface="com.cholick.idea.spock.config.SpockConfig"
                            serviceImplementation="com.cholick.idea.spock.config.SpockConfig"/>

        <localInspection language="Groovy" shortName="SpSetupInspection"
                         displayName="Setup block successor" groupName="Spock" enabledByDefault="true"
                         level="ERROR" implementationClass="com.cholick.idea.spock.inspections.SetupInspection"/>
        <localInspection language="Groovy" shortName="SpGivenInspection"
                         displayName="Given block successor" groupName="Spock" enabledByDefault="true"
                         level="ERROR" implementationClass="com.cholick.idea.spock.inspections.GivenInspection"/>
        <localInspection language="Groovy" shortName="SpExpectInspection"
                         displayName="Expect block successor" groupName="Spock" enabledByDefault="true"
                         level="ERROR" implementationClass="com.cholick.idea.spock.inspections.ExpectInspection"/>
        <localInspection language="Groovy" shortName="SpWhenInspection"
                         displayName="When block successor" groupName="Spock" enabledByDefault="true"
                         level="ERROR" implementationClass="com.cholick.idea.spock.inspections.WhenInspection"/>
        <localInspection language="Groovy" shortName="SpThenInspection"
                         displayName="Then block successor" groupName="Spock" enabledByDefault="true"
                         level="ERROR" implementationClass="com.cholick.idea.spock.inspections.ThenInspection"/>
        <localInspection language="Groovy" shortName="SpCleanupInspection"
                         displayName="Cleanup block successor" groupName="Spock" enabledByDefault="true"
                         level="ERROR" implementationClass="com.cholick.idea.spock.inspections.CleanupInspection"/>
        <localInspection language="Groovy" shortName="SpWhereInspection"
                         displayName="Where block successor" groupName="Spock" enabledByDefault="true"
                         level="ERROR" implementationClass="com.cholick.idea.spock.inspections.WhereInspection"/>
    </extensions>

</idea-plugin>
